<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mirahome.tetrisgame.activity.MainActivity">

    <com.mirahome.tetrisgame.view.GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.mirahome.tetrisgame.view.GameView
        android:id="@+id/game_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true">


        <Button
            android:id="@+id/main_btn"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/play" />

        <Button
            android:id="@+id/top_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/bottom_btn"
            android:text="↑"/>

        <Button
            android:id="@+id/bottom_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="↓"/>

        <Button
            android:id="@+id/left_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/top_btn"
            android:layout_toLeftOf="@+id/top_btn"
            android:text="←"/>

        <Button
            android:id="@+id/right_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/top_btn"
            android:layout_toRightOf="@+id/top_btn"
            android:text="→"/>


    </RelativeLayout>

</RelativeLayout>
